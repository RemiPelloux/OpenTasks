{
  "name": "opentasks",
  "displayName": "OpenTasks",
  "description": "AI-powered Kanban board - Create tickets, queue AI agents, and manage projects directly from Cursor IDE",
  "version": "0.1.0",
  "publisher": "opentasks",
  "icon": "resources/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/RemiPelloux/OpenTasks"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opentasks.signIn",
        "title": "OpenTasks: Sign In"
      },
      {
        "command": "opentasks.signOut",
        "title": "OpenTasks: Sign Out"
      },
      {
        "command": "opentasks.createTicket",
        "title": "OpenTasks: Create Ticket",
        "icon": "$(add)"
      },
      {
        "command": "opentasks.createProject",
        "title": "OpenTasks: Create New Project",
        "icon": "$(new-folder)"
      },
      {
        "command": "opentasks.refresh",
        "title": "OpenTasks: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "opentasks.openInBrowser",
        "title": "OpenTasks: Open in Browser",
        "icon": "$(link-external)"
      },
      {
        "command": "opentasks.moveToHandle",
        "title": "Move to Handle (AI Agent)",
        "icon": "$(robot)"
      },
      {
        "command": "opentasks.moveToTodo",
        "title": "Move to To Do",
        "icon": "$(checklist)"
      },
      {
        "command": "opentasks.moveToDone",
        "title": "Move to Done",
        "icon": "$(check)"
      },
      {
        "command": "opentasks.copyTicket",
        "title": "Copy Ticket Details",
        "icon": "$(copy)"
      },
      {
        "command": "opentasks.copyEnhanced",
        "title": "Copy & Enhance with Context",
        "icon": "$(sparkle)"
      },
      {
        "command": "opentasks.editTicket",
        "title": "Edit Ticket",
        "icon": "$(edit)"
      },
      {
        "command": "opentasks.deleteTicket",
        "title": "Delete Ticket",
        "icon": "$(trash)"
      },
      {
        "command": "opentasks.updateFromAI",
        "title": "OpenTasks: Update Ticket from AI Response",
        "icon": "$(sparkle)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opentasks",
          "title": "OpenTasks",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "opentasks": [
        {
          "id": "opentasksProjects",
          "name": "Projects",
          "icon": "resources/icon.svg",
          "contextualTitle": "OpenTasks"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "opentasksProjects",
        "contents": "Sign in to OpenTasks to view your projects.\n[Sign In](command:opentasks.signIn)\nDon't have an account? [Create one](https://www.opentasks.fr/register)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "opentasks.refresh",
          "when": "view == opentasksProjects",
          "group": "navigation@1"
        },
        {
          "command": "opentasks.createTicket",
          "when": "view == opentasksProjects",
          "group": "navigation@2"
        },
        {
          "command": "opentasks.createProject",
          "when": "view == opentasksProjects",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "opentasks.openInBrowser",
          "when": "view == opentasksProjects && viewItem == ticket",
          "group": "inline"
        },
        {
          "command": "opentasks.editTicket",
          "when": "view == opentasksProjects && viewItem == ticket",
          "group": "1_edit@1"
        },
        {
          "command": "opentasks.copyTicket",
          "when": "view == opentasksProjects && viewItem == ticket",
          "group": "2_copy@1"
        },
        {
          "command": "opentasks.copyEnhanced",
          "when": "view == opentasksProjects && viewItem == ticket",
          "group": "2_copy@2"
        },
        {
          "command": "opentasks.moveToHandle",
          "when": "view == opentasksProjects && viewItem == ticket",
          "group": "3_move@1"
        },
        {
          "command": "opentasks.moveToTodo",
          "when": "view == opentasksProjects && viewItem == ticket",
          "group": "3_move@2"
        },
        {
          "command": "opentasks.moveToDone",
          "when": "view == opentasksProjects && viewItem == ticket",
          "group": "3_move@3"
        },
        {
          "command": "opentasks.deleteTicket",
          "when": "view == opentasksProjects && viewItem == ticket",
          "group": "4_delete@1"
        }
      ]
    },
    "configuration": {
      "title": "OpenTasks",
      "properties": {
        "opentasks.baseUrl": {
          "type": "string",
          "default": "https://www.opentasks.fr",
          "description": "Base URL of your OpenTasks instance"
        },
        "opentasks.refreshInterval": {
          "type": "number",
          "default": 10,
          "description": "Refresh interval in seconds (0 to disable auto-refresh)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsup src/extension.ts --format cjs --external vscode --minify",
    "dev": "tsup src/extension.ts --format cjs --external vscode --watch",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {}
}



