<%#
  Alert Component Partial
  
  Usage:
  <%- include('partials/ui/alert', { 
    variant: 'default', // default, destructive, success
    title: 'Alert Title',  // optional
    content: 'Alert message',
    class: ''
  }) %>
%>
<%
const variants = {
  default: 'bg-background text-foreground border-border',
  destructive: 'border-destructive/50 text-destructive dark:border-destructive [&>svg]:text-destructive bg-destructive/10',
  success: 'border-status-success/50 text-status-success dark:border-status-success [&>svg]:text-status-success bg-status-success/10'
};

const baseClasses = 'relative w-full rounded-lg border p-4 [&>svg~*]:pl-7 [&>svg+div]:translate-y-[-3px] [&>svg]:absolute [&>svg]:left-4 [&>svg]:top-4 [&>svg]:text-foreground';
const variantClass = variants[variant || 'default'];
const extraClass = typeof className !== 'undefined' ? className : '';
%>
<div role="alert" class="<%= baseClasses %> <%= variantClass %> <%= extraClass %>">
  <% if (typeof title !== 'undefined' && title) { %>
    <h5 class="mb-1 font-medium leading-none tracking-tight"><%= title %></h5>
  <% } %>
  <div class="text-sm [&_p]:leading-relaxed"><%- content %></div>
</div>




