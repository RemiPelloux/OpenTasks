<%#
  Badge Component Partial
  
  Usage:
  <%- include('partials/ui/badge', { 
    variant: 'default', // default, secondary, destructive, outline, queued, processing, review, success
    content: 'Badge Text',
    class: ''
  }) %>
%>
<%
const variants = {
  default: 'bg-primary text-primary-foreground hover:bg-primary/80',
  secondary: 'bg-secondary text-secondary-foreground hover:bg-secondary/80',
  destructive: 'bg-destructive text-destructive-foreground hover:bg-destructive/80',
  outline: 'text-foreground border border-input',
  queued: 'badge-queued',
  processing: 'badge-processing',
  review: 'badge-review',
  success: 'badge-success',
  error: 'badge-error'
};

const baseClasses = 'inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2';
const variantClass = variants[variant || 'default'];
const extraClass = typeof className !== 'undefined' ? className : '';
%>
<div class="<%= baseClasses %> <%= variantClass %> <%= extraClass %>">
  <%- content %>
</div>


