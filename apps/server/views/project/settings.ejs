(function() {
  const projectId = '${project.id}';
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '${csrfToken}';
  const isAdminOrOwner = ${membership.role === 'OWNER' || membership.role === 'ADMIN' ? 'true' : 'false'};
  
