      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4 mr-1"><path d="m15 18-6-6 6-6"/></svg>
      Back to Board
    </a>
    <h1 class="text-3xl font-bold tracking-tight">${project.name}</h1>
    <p class="text-muted-foreground">Project settings and configuration</p>
  </div>
  
  <form action="/project/${project.id}/settings" method="POST" class="space-y-8" id="settings-form">
    <input type="hidden" name="_csrf" value="${csrfToken}">
    <input type="hidden" id="githubRepoUrl" name="githubRepoUrl" value="${project.githubRepoUrl || ''}">
    
    <!-- Basic Info -->
    <div class="rounded-lg border bg-card">
      <div class="p-6 border-b">
        <h3 class="font-semibold">Basic Information</h3>
        <p class="text-sm text-muted-foreground">Update your project details</p>
      </div>
      <div class="p-6 space-y-4">
        <div class="space-y-2">
          <label for="name" class="text-sm font-medium leading-none">Project Name</label>
          <input type="text" id="name" name="name" value="${project.name}" class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm" required>
        </div>
        <div class="space-y-2">
          <label for="description" class="text-sm font-medium leading-none">Description</label>
          <textarea id="description" name="description" rows="3" class="flex min-h-[80px] w-full rounded-md border border-input bg-background px-3 py-2 text-sm resize-y">${project.description || ''}</textarea>
        </div>
      </div>
    </div>
    
    <!-- Cursor API Configuration -->
    <div class="rounded-lg border bg-card">
      <div class="p-6 border-b">
        <h3 class="font-semibold flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-5 w-5"><path d="M12 8V4H8"/><rect width="16" height="12" x="4" y="8" rx="2"/><path d="M2 14h2"/><path d="M20 14h2"/><path d="M15 13v2"/><path d="M9 13v2"/></svg>
          Cursor Cloud Agent
        </h3>
        <p class="text-sm text-muted-foreground">Configure the AI agent and select repository</p>
      </div>
      <div class="p-6 space-y-4">
        <div class="space-y-2">
          <label for="cursorApiKey" class="text-sm font-medium leading-none">
            Cursor API Key
            ${project.hasApiKey ? '<span class="text-green-400 text-xs ml-2">✓ Configured</span>' : ''}
          </label>
          <div class="flex gap-2">
            <input type="password" id="cursorApiKey" name="cursorApiKey" class="flex h-10 flex-1 rounded-md border border-input bg-background px-3 py-2 text-sm font-mono" placeholder="${project.hasApiKey ? '••••••••••••••••' : 'key_xxxxx...'}">
            <button type="button" id="load-repos-btn" class="inline-flex items-center justify-center rounded-md text-sm font-medium border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 whitespace-nowrap disabled:opacity-50 disabled:cursor-not-allowed">
              <svg id="load-repos-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4 mr-2"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
              <span id="load-repos-text">Load Repos</span>
            </button>
          </div>
          <p class="text-xs text-muted-foreground">Leave empty to keep current key</p>
        </div>
        
        <!-- Loading State -->
        <div id="repo-loading" class="hidden p-4 rounded-md border border-amber-500/20 bg-amber-500/10">
          <div class="flex items-center gap-2 text-amber-400">
            <svg class="h-4 w-4 animate-spin" viewBox="0 0 24 24" fill="none"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" class="opacity-25"/><path fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
            <span class="text-sm font-medium">Loading repositories...</span>
          </div>
        </div>
        
        <!-- Error State -->
        <div id="repo-error" class="hidden p-4 rounded-md border border-destructive/50 bg-destructive/10">
          <p class="text-sm text-destructive" id="repo-error-message">Failed to load repositories</p>
        </div>
        
        <!-- Repository Selector -->
        <div id="repo-selector-container" class="${project.githubRepoUrl ? '' : 'hidden'} space-y-2">
          <label for="repo-selector" class="text-sm font-medium leading-none">Select Repository</label>
          <select id="repo-selector" class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm">
            <option value="">Choose a repository...</option>
            ${project.githubRepoUrl ? '<option value="' + project.githubRepoUrl + '" selected>' + project.githubRepoUrl.replace('https://github.com/', '') + '</option>' : ''}
          </select>
          ${project.githubRepoUrl ? '<p class="text-xs text-green-400" id="repo-count">✓ Repository connected</p>' : '<p class="text-xs text-muted-foreground" id="repo-count"></p>'}
        </div>
      </div>
    </div>
    
    <!-- Team Members -->
    <div class="rounded-lg border bg-card">
      <div class="p-6 border-b">
        <h3 class="font-semibold">Team Members</h3>
        <p class="text-sm text-muted-foreground">${project.members.length} member${project.members.length !== 1 ? 's' : ''}</p>
      </div>
      <div class="divide-y">
