for (const m of project.members) {
  bodyContent += renderMemberRow(m);
}

bodyContent += `
      </div>
    </div>
    
    <div class="flex items-center justify-between">
      <button type="submit" class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
        Save Changes
      </button>
    </div>
  </form>
  
  ${membership.role === 'OWNER' ? `
    <div class="mt-8 rounded-lg border border-destructive/50 bg-destructive/5">
      <div class="p-6 border-b border-destructive/20">
        <h3 class="font-semibold text-destructive">Danger Zone</h3>
        <p class="text-sm text-muted-foreground">Irreversible actions</p>
      </div>
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="font-medium">Delete Project</p>
            <p class="text-sm text-muted-foreground">Permanently delete this project and all ${project._count.tickets} tickets</p>
          </div>
          <form action="/project/${project.id}/delete" method="POST" onsubmit="return confirm('Are you sure? This cannot be undone.')">
            <input type="hidden" name="_csrf" value="${csrfToken}">
            <button type="submit" class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-destructive text-destructive-foreground hover:bg-destructive/90 h-9 px-3">
              Delete Project
            </button>
          </form>
        </div>
      </div>
    </div>
  ` : ''}
</div>

<script>
(function() {
  const apiKeyInput = document.getElementById('cursorApiKey');
  const loadReposBtn = document.getElementById('load-repos-btn');
  const loadReposIcon = document.getElementById('load-repos-icon');
  const loadReposText = document.getElementById('load-repos-text');
  const repoSelector = document.getElementById('repo-selector');
  const repoSelectorContainer = document.getElementById('repo-selector-container');
  const repoLoading = document.getElementById('repo-loading');
  const repoError = document.getElementById('repo-error');
  const repoErrorMessage = document.getElementById('repo-error-message');
  const repoCount = document.getElementById('repo-count');
  const githubUrlInput = document.getElementById('githubRepoUrl');
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';
  const hasExistingKey = ${project.hasApiKey ? 'true' : 'false'};
  
  // Try to load saved API key
  fetch('/settings/api-key', {
    headers: { 'X-CSRF-Token': csrfToken }
  })
  .then(r => r.json())
  .then(data => {
    if (data.hasKey && data.key) {
      apiKeyInput.value = data.key;
      apiKeyInput.type = 'password';
      loadReposBtn.disabled = false;
    }
  })
  .catch(() => {});
  
  // Enable load repos button based on API key input
  apiKeyInput.addEventListener('input', function() {
    loadReposBtn.disabled = !this.value.trim();
  });
  
  // Handle repository selection
  repoSelector.addEventListener('change', function() {
    githubUrlInput.value = this.value;
  });
  
  // Load repositories from Cursor API
  loadReposBtn.addEventListener('click', async function() {
    const apiKey = apiKeyInput.value.trim();
    if (!apiKey) return;
    
    // Show loading state
    loadReposBtn.disabled = true;
    loadReposText.textContent = 'Loading...';
    loadReposIcon.classList.add('animate-spin');
    repoLoading.classList.remove('hidden');
    repoError.classList.add('hidden');
    
    try {
      const response = await fetch('/api/cursor/repositories', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': csrfToken,
        },
        body: JSON.stringify({ apiKey }),
      });
      
      const data = await response.json();
      
      if (!response.ok) {
        throw new Error(data.error || 'Failed to load repositories');
      }
      
      // Populate selector
      repoSelector.innerHTML = '<option value="">Choose a repository...</option>';
      
      if (data.repositories && data.repositories.length > 0) {
        // Group by owner
        const grouped = {};
        data.repositories.forEach(repo => {
          if (!grouped[repo.owner]) grouped[repo.owner] = [];
          grouped[repo.owner].push(repo);
        });
        
        // Add options grouped by owner
        Object.keys(grouped).sort().forEach(owner => {
          const optgroup = document.createElement('optgroup');
          optgroup.label = owner;
          
          grouped[owner].sort((a, b) => a.name.localeCompare(b.name)).forEach(repo => {
            const option = document.createElement('option');
            option.value = repo.repository;
            option.textContent = repo.name;
            // Select current repo if matches
            if (repo.repository === githubUrlInput.value) {
              option.selected = true;
            }
            optgroup.appendChild(option);
          });
          
          repoSelector.appendChild(optgroup);
        });
        
        repoSelectorContainer.classList.remove('hidden');
        repoCount.textContent = data.repositories.length + ' repositories loaded';
        repoCount.className = 'text-xs text-green-400';
      } else {
        throw new Error('No repositories found');
      }
      
    } catch (error) {
      repoErrorMessage.textContent = error.message;
      repoError.classList.remove('hidden');
    } finally {
      repoLoading.classList.add('hidden');
      loadReposBtn.disabled = false;
      loadReposText.textContent = 'Load Repos';
      loadReposIcon.classList.remove('animate-spin');
    }
  });
})();
</script>
`;
%>
<%- include('../layout', { body: bodyContent, title, csrfToken, isAuthenticated: true, user, currentPath }) %>
