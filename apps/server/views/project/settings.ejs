  const inviteResults = document.getElementById('invite-results');
  const inviteNoResults = document.getElementById('invite-no-results');
  const inviteLoading = document.getElementById('invite-loading');
  const inviteRole = document.getElementById('invite-role');
  const sendInviteBtn = document.getElementById('send-invite-btn');
  const cancelInviteBtn = document.getElementById('cancel-invite-btn');
  const inviteError = document.getElementById('invite-error');
  const inviteSuccess = document.getElementById('invite-success');
  const memberList = document.getElementById('member-list');
  const memberCount = document.getElementById('member-count');
  
  let searchTimeout = null;
  let selectedUser = null;
  
  // Toggle invite form
  if (inviteBtn) {
    inviteBtn.addEventListener('click', () => {
      inviteForm.classList.toggle('hidden');
      if (!inviteForm.classList.contains('hidden')) {
        inviteSearch.focus();
      }
    });
  }
  
  if (cancelInviteBtn) {
    cancelInviteBtn.addEventListener('click', () => {
      inviteForm.classList.add('hidden');
      resetInviteForm();
    });
  }
  
  function resetInviteForm() {
    inviteSearch.value = '';
    inviteUserId.value = '';
    selectedUser = null;
    sendInviteBtn.disabled = true;
    inviteAutocomplete.classList.add('hidden');
    inviteError.classList.add('hidden');
    inviteSuccess.classList.add('hidden');
    inviteSearch.classList.remove('border-green-500');
  }
  
  // Autocomplete search
  if (inviteSearch) {
    inviteSearch.addEventListener('input', () => {
      const query = inviteSearch.value.trim();
      
      // Clear previous selection
      if (selectedUser) {
        selectedUser = null;
        inviteUserId.value = '';
        sendInviteBtn.disabled = true;
        inviteSearch.classList.remove('border-green-500');
      }
      
      // Debounce search
      clearTimeout(searchTimeout);
      
      if (query.length < 2) {
        inviteAutocomplete.classList.add('hidden');
        return;
      }
      
      searchTimeout = setTimeout(() => searchUsers(query), 300);
    });
    
    // Close dropdown on click outside
    document.addEventListener('click', (e) => {
      if (!inviteSearch.contains(e.target) && !inviteAutocomplete.contains(e.target)) {
        inviteAutocomplete.classList.add('hidden');
      }
    });
    
    // Keyboard navigation
    inviteSearch.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        inviteAutocomplete.classList.add('hidden');
      }
    });
  }
  
  async function searchUsers(query) {
    inviteLoading.classList.remove('hidden');
    inviteResults.innerHTML = '';
    inviteNoResults.classList.add('hidden');
    inviteAutocomplete.classList.remove('hidden');
    
    try {
      const response = await fetch('/api/users/search?q=' + encodeURIComponent(query) + '&excludeProject=' + projectId);
      const data = await response.json();
      
      inviteLoading.classList.add('hidden');
      
      if (data.users && data.users.length > 0) {
        inviteResults.innerHTML = data.users.map(user => \`
          <button type="button" class="user-result w-full px-3 py-2 text-left hover:bg-muted flex items-center gap-3" data-user-id="\${user.id}" data-email="\${user.email}" data-name="\${user.name}">
            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-muted font-medium text-xs">
              \${user.avatarUrl ? '<img src="' + user.avatarUrl + '" class="h-8 w-8 rounded-full" alt="">' : user.name.substring(0, 2).toUpperCase()}
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium truncate">\${user.name}</p>
              <p class="text-xs text-muted-foreground truncate">\${user.email}</p>
            </div>
          </button>
        \`).join('');
        
        // Attach click handlers
        inviteResults.querySelectorAll('.user-result').forEach(btn => {
          btn.addEventListener('click', () => selectUser(btn));
        });
      } else {
        inviteNoResults.classList.remove('hidden');
      }
    } catch (error) {
      inviteLoading.classList.add('hidden');
      inviteNoResults.textContent = 'Error searching users';
      inviteNoResults.classList.remove('hidden');
    }
  }
  
  function selectUser(btn) {
    const userId = btn.dataset.userId;
    const email = btn.dataset.email;
    const name = btn.dataset.name;
    
    selectedUser = { id: userId, email, name };
    inviteUserId.value = userId;
    inviteSearch.value = name + ' (' + email + ')';
    inviteSearch.classList.add('border-green-500');
    sendInviteBtn.disabled = false;
    inviteAutocomplete.classList.add('hidden');
  }
  
  // Send invite
  if (sendInviteBtn) {
    sendInviteBtn.addEventListener('click', async () => {
      if (!selectedUser) {
        inviteError.textContent = 'Please select a user from the list';
        inviteError.classList.remove('hidden');
        return;
      }
      
      const role = inviteRole.value;
      
      sendInviteBtn.disabled = true;
      sendInviteBtn.textContent = 'Adding...';
      inviteError.classList.add('hidden');
      inviteSuccess.classList.add('hidden');
      
      try {
        const response = await fetch('/project/' + projectId + '/members/invite', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': csrfToken,
          },
          body: JSON.stringify({ email: selectedUser.email, role }),
        });
        
        const data = await response.json();
        
        if (!response.ok) {
          throw new Error(data.error || 'Failed to add member');
        }
        
        // Add new member to list
        const member = data.member;
        const newRow = document.createElement('div');
        newRow.className = 'flex items-center justify-between p-4 member-row';
        newRow.dataset.userId = member.id;
        newRow.innerHTML = \`
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-muted font-medium text-sm">
              \${member.avatarUrl ? '<img src="' + member.avatarUrl + '" class="h-10 w-10 rounded-full" alt="">' : member.name.substring(0, 2).toUpperCase()}
            </div>
            <div>
              <p class="font-medium">\${member.name}</p>
              <p class="text-sm text-muted-foreground">\${member.email}</p>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <select class="h-8 rounded-md border border-input bg-background px-2 py-1 text-xs role-select" data-user-id="\${member.id}">
              <option value="MEMBER" \${member.role === 'MEMBER' ? 'selected' : ''}>Member</option>
              <option value="ADMIN" \${member.role === 'ADMIN' ? 'selected' : ''}>Admin</option>
            </select>
            <button type="button" class="remove-member-btn h-8 w-8 rounded-md border border-destructive/50 text-destructive hover:bg-destructive/10 inline-flex items-center justify-center" data-user-id="\${member.id}" data-name="\${member.name}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
            </button>
          </div>
        \`;
        memberList.appendChild(newRow);
        
        // Update count
        const currentCount = parseInt(memberCount.textContent, 10);
        memberCount.textContent = currentCount + 1;
        
        // Reset form
        resetInviteForm();
        inviteSuccess.textContent = member.name + ' has been added to the project';
        inviteSuccess.classList.remove('hidden');
        
        // Attach event listeners to new elements
        attachMemberListeners(newRow);
        
      } catch (error) {
        inviteError.textContent = error.message;
        inviteError.classList.remove('hidden');
      } finally {
        sendInviteBtn.disabled = !selectedUser;
        sendInviteBtn.textContent = 'Add';
      }
    });
  }
  
  // Attach listeners to role selects and remove buttons
  function attachMemberListeners(container) {
    container.querySelectorAll('.role-select').forEach(select => {
      select.addEventListener('change', async function() {
        const userId = this.dataset.userId;
        const role = this.value;
        
        try {
          const response = await fetch('/project/' + projectId + '/members/' + userId + '/role', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': csrfToken,
            },
            body: JSON.stringify({ role }),
          });
          
          if (!response.ok) {
            const data = await response.json();
            throw new Error(data.error || 'Failed to update role');
          }
          
          window.showToast('Role updated successfully', 'success');
        } catch (error) {
          window.showToast(error.message, 'error');
          window.location.reload();
        }
      });
    });
    
    container.querySelectorAll('.remove-member-btn').forEach(btn => {
      // Track if we're in confirm mode
      let isConfirming = false;
      
      btn.addEventListener('click', async function() {
        const userId = this.dataset.userId;
        const name = this.dataset.name;
        
        if (!isConfirming) {
          // Show confirmation
          isConfirming = true;
          const originalText = this.innerHTML;
          this.innerHTML = 'Confirm?';
          this.classList.add('confirming');
          
          // Reset after 3 seconds if not clicked
          setTimeout(() => {
            if (isConfirming) {
              isConfirming = false;
              this.innerHTML = originalText;
              this.classList.remove('confirming');
            }
          }, 3000);
          return;
        }
        
        // Perform removal
        isConfirming = false;
        
        try {
          const response = await fetch('/project/' + projectId + '/members/' + userId + '/remove', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': csrfToken,
            },
          });
          
          const data = await response.json();
          
          if (!response.ok) {
            throw new Error(data.error || 'Failed to remove member');
          }
          
          const row = this.closest('.member-row');
          row.remove();
          
          const currentCount = parseInt(memberCount.textContent, 10);
          memberCount.textContent = currentCount - 1;
          
          window.showToast(name + ' removed from project', 'success');
          
        } catch (error) {
          window.showToast(error.message, 'error');
        }
      });
    });
  }
  
  // Initial attachment
  attachMemberListeners(memberList);
})();

