<%
function renderProjectCard(project) {
  const roleColors = {
    OWNER: 'bg-primary/10 text-primary',
    ADMIN: 'bg-blue-500/10 text-blue-400',
    MEMBER: 'bg-muted text-muted-foreground'
  };
  const roleColor = roleColors[project.role] || roleColors.MEMBER;
  
  return `
    <a href="/project/${project.id}/board" class="group relative rounded-lg border bg-card p-6 shadow-sm transition-all hover:shadow-md hover:border-primary/20">
      <div class="flex items-start justify-between">
        <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary text-primary-foreground font-bold">
          ${project.name.charAt(0).toUpperCase()}
        </div>
        <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold ${roleColor}">
          ${project.role}
        </span>
      </div>
      
      <div class="mt-4">
        <h3 class="font-semibold group-hover:text-primary transition-colors">${project.name}</h3>
        <p class="mt-1 text-sm text-muted-foreground line-clamp-2">
          ${project.description || 'No description'}
        </p>
      </div>
      
      <div class="mt-4 flex items-center gap-4 text-sm text-muted-foreground">
        <div class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4"><path d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"/></svg>
          <span>${project.ticketCount}</span>
        </div>
        <div class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
          <span>${project.memberCount}</span>
        </div>
        ${project.githubRepoUrl ? `
          <div class="flex items-center gap-1 text-green-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
            <span>Connected</span>
          </div>
        ` : ''}
      </div>
    </a>
  `;
}

let bodyContent = `
<div class="container py-6">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">Projects</h1>
      <p class="text-muted-foreground">Manage your AI-powered development workflows</p>
    </div>
    <a href="/dashboard/new-project" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4 mr-2"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
      New Project
    </a>
  </div>
`;

if (projects.length === 0) {
  bodyContent += `
  <div class="flex flex-col items-center justify-center rounded-lg border border-dashed bg-muted/40 p-12 text-center">
    <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-muted">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-6 w-6 text-muted-foreground"><path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"/></svg>
    </div>
    <h3 class="mt-4 text-lg font-semibold">No projects</h3>
    <p class="mt-2 text-sm text-muted-foreground">Get started by creating your first project.</p>
    <a href="/dashboard/new-project" class="mt-4 inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 py-2">
      Create Project
    </a>
  </div>
  `;
} else {
  bodyContent += `<div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">`;
  for (const project of projects) {
    bodyContent += renderProjectCard(project);
  }
  bodyContent += `</div>`;
}

bodyContent += `</div>`;
%>
<%- include('../layout', { body: bodyContent, title, csrfToken, isAuthenticated: true, user, currentPath }) %>
