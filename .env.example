# ===========================================
# OpenTasks Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL="postgresql://opentasks:opentasks_secret@localhost:5432/opentasks?schema=public"

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV="development"
PORT="3000"
HOST="localhost"

# ===========================================
# Session & Security
# ===========================================
# Generate with: openssl rand -hex 32
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# AES-256 encryption key for storing API keys (must be 32 bytes / 64 hex chars)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-32-byte-encryption-key-change-this-in-production"

# CSRF token secret
CSRF_SECRET="your-csrf-secret-change-this-in-production"

# ===========================================
# Cursor Cloud Agent API
# ===========================================
# Your Cursor API key from https://cursor.com/settings
CURSOR_API_KEY=""

# Base URL for Cursor Cloud Agent API
CURSOR_API_BASE_URL="https://api.cursor.com"

# ===========================================
# GitHub Integration (Optional)
# ===========================================
# GitHub App ID (if using GitHub App for repo access)
GITHUB_APP_ID=""

# GitHub App Private Key (base64 encoded)
GITHUB_APP_PRIVATE_KEY=""

# ===========================================
# Cost Guardrails
# ===========================================
# Maximum API cost per project per month (in cents)
MAX_PROJECT_COST_CENTS="10000"

# ===========================================
# Initial Admin Setup
# ===========================================
# Initial invite codes (comma-separated)
INITIAL_INVITE_CODES="OPENTASKS-ALPHA-001,OPENTASKS-ALPHA-002"
