{
  "name": "opentasks",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "start": "pnpm -r run start",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "pnpm -r run typecheck",
    "db:generate": "pnpm --filter @opentasks/database run generate",
    "db:push": "pnpm --filter @opentasks/database run push",
    "db:migrate": "pnpm --filter @opentasks/database run migrate",
    "db:seed": "pnpm --filter @opentasks/database run seed",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "setup": "pnpm install && pnpm db:generate && pnpm db:push && pnpm db:seed",
    "start:services": "docker compose up -d postgres redis",
    "start:all": "pnpm start:services && sleep 3 && pnpm dev",
    "stop:services": "docker compose down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
